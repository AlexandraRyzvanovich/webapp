<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                       http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Fitness</display-name>

    <description>MySQL</description>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/fitness</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>program</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>program</servlet-name>
        <url-pattern>/program</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/WEB-INF/views/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>subscriptions</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subscriptions</servlet-name>
        <url-pattern>/subscriptions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/views/common/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>clients</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clients</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>interns</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>interns</servlet-name>
        <url-pattern>/interns</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>internCard</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>internCard</servlet-name>
        <url-pattern>/internCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bonus</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bonus</servlet-name>
        <url-pattern>/bonus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reviews</servlet-name>
        <servlet-class>com.epam.webapp.controller.Controller</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>reviews</servlet-name>
        <url-pattern>/reviews</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.epam.webapp.filter.RoleFilter</filter-class>
        <init-param>
            <param-name>avoid-urls</param-name>
            <param-value>index.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.epam.webapp.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.webapp.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/shared/error.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>diets</taglib-uri>
            <taglib-location>/WEB-INF/tags/diets.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>programStatuses</taglib-uri>
            <taglib-location>/WEB-INF/tags/programstatuses.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>